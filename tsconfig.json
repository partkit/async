{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./demo",
    "./src",
    "./test"
  ]
}
